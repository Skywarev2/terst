<style>
  .feedback-item {
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,255,255,0.07);
    border-radius: 12px;
    padding: 1.8rem;
    height: 100%;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .feedback-item::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 150px;
    height: 150px;
    background: radial-gradient(circle at top right, rgba(229,62,62,0.07), transparent 70%);
    border-radius: 50%;
    z-index: 0;
    transition: all 0.5s ease;
    opacity: 0;
  }
  
  .feedback-item:hover {
    transform: translateY(-8px);
    border-color: rgba(229,62,62,0.3);
    background: rgba(255,255,255,0.05);
    box-shadow: 0 15px 30px rgba(0,0,0,0.25);
  }
  
  .feedback-item:hover::after {
    opacity: 1;
  }
  
  .feedback-content {
    position: relative;
    padding-left: 1.2rem;
    margin-bottom: 1.5rem;
    color: #d1d5db;
    font-style: italic;
    line-height: 1.6;
    z-index: 1;
  }
  
  .feedback-content::before {
    content: '"';
    position: absolute;
    top: -1rem;
    left: -0.5rem;
    font-size: 4rem;
    color: rgba(229,62,62,0.2);
    font-family: Georgia, serif;
    line-height: 1;
  }
  
  .feedback-meta {
    border-top: 1px solid rgba(255,255,255,0.05);
    padding-top: 1rem;
    position: relative;
    z-index: 1;
  }
  
  .rating {
    margin-bottom: 0.8rem;
    display: flex;
  }
  
  .rating i {
    color: #e53e3e;
    margin-right: 3px;
    transition: all 0.3s ease;
  }
  
  .feedback-item:hover .rating i {
    transform: scale(1.1);
  }
  
  .verification {
    display: flex;
    align-items: center;
    font-size: 0.85rem;
    color: #9ca3af;
  }
  
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #e53e3e;
    color: white;
    margin-right: 8px;
    font-size: 0.7rem;
  }
  
  /* Pulse animation for badge */
  @keyframes pulse-badge {
    0% { box-shadow: 0 0 0 0 rgba(229,62,62,0.7); }
    70% { box-shadow: 0 0 0 6px rgba(229,62,62,0); }
    100% { box-shadow: 0 0 0 0 rgba(229,62,62,0); }
  }
  
  .feedback-item:hover .badge {
    animation: pulse-badge 1.5s infinite;
  }
</style>

<div class="feedback-item">
  <p class="feedback-content">{{ feedback.content | default(feedback.message) | truncate(200) }}</p>
  <div class="feedback-meta">
    <div class="rating">
      {% for i in range(0, (feedback.rating | default(5))) %}
        <i class="fas fa-star"></i>
      {% endfor %}
    </div>
    <div class="verification">
      <span class="badge"><i class="fas fa-check"></i></span>
      <span>Verified purchase - {{ feedback.created_at | date('MMM DD, YYYY') }}</span>
    </div>
  </div>
</div>