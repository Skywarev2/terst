<!-- HERO SECTION STYLING -->
<style>
.hero-section {
  position: relative;
  padding: 7rem 0 5rem;
  overflow: hidden;
  background-color: var(--main-bg-color);
}

  .hero-glow {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 45vw;
    height: 45vw;
    background: radial-gradient(circle, rgba(229,62,62,0.15) 0%, rgba(229,62,62,0) 70%);
    border-radius: 50%;
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 10;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(90deg, #fff 0%, #d0d8f3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-title .accent {
    background: linear-gradient(90deg, #e53e3e 0%, #fd6b6b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  .hero-title .accent::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #e53e3e 0%, #fd6b6b 100%);
    border-radius: 3px;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 400;
    color: rgba(255,255,255,0.7);
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .feature-card {
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,255,255,0.07);
    border-radius: 12px;
    padding: 1.2rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    background: rgba(255,255,255,0.06);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: rgba(229,62,62,0.1);
    color: #e53e3e;
    font-size: 1.2rem;
  }
  
  .feature-text h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: #fff;
  }
  
  .feature-text p {
    font-size: 0.85rem;
    color: rgba(255,255,255,0.6);
    margin: 0;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(90deg, #e53e3e 0%, #fd6b6b 100%);
    color: white;
    font-weight: 600;
    padding: 0.9rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    position: relative;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(229,62,62,0.3);
    margin-top: 1rem;
  }

  .hero-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,0.2);
    transition: all 0.4s ease;
    transform: skewX(-20deg);
  }

  .hero-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(229,62,62,0.4);
    color: white;
  }

  .hero-cta:hover::before {
    left: 100%;
  }

  .hero-cta svg {
    width: 18px;
    height: 18px;
  }

  .hero-image {
    position: relative;
    z-index: 2;
  }

  .hero-image img {
    max-width: 100%;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
  }

  .highlighted-text {
    color: #e53e3e;
    font-weight: 600;
  }

  @media (max-width: 992px) {
    .hero-image {
      margin-top: 3rem;
      text-align: center;
    }
    
    .hero-image img {
      max-width: 80%;
    }
  }

  .floating-animation {
    animation: floating 4s ease-in-out infinite;
  }

  @keyframes floating {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }
</style>

